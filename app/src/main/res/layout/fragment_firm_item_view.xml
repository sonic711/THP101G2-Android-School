<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.thp101g2_android_school.firm.viewmodel.FirmMainViewModel" />
    </data>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_margin="4dp"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="#ffffff"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivFirmProduct"
                android:layout_width="200dp"
                android:layout_height="250dp"
                app:imageResource="@{viewModel.firmProduct.imageId}"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tvFirmProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="1dp"
                android:layout_marginTop="8dp"
                android:text="@{viewModel.firmProduct.name}"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvFirmProductAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="1dp"
                android:layout_marginTop="8dp"
                android:text="@{viewModel.firmProduct.author}"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvFirmProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="1dp"
                android:layout_marginTop="8dp"
                android:text="@{viewModel.firmProduct.price}"
                android:textSize="18sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>