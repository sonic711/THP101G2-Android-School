<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".course.controller.CouUploadChapterFragment" >

    <data>
        <variable
            name="viewModel"
            type="com.example.thp101g2_android_school.course.viewmodel.CouUploadChapterViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinnerChapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/txtchapter" />


        <EditText
            android:id="@+id/editTextChapterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter chapter name" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Video"
            android:onClick="@{() -> viewModel.uploadVideo()}" />
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="#00FFFF"
            android:padding="10dp"
            android:text="@{viewModel.text}"
            android:textSize="20sp" />

    </LinearLayout>
</layout>
