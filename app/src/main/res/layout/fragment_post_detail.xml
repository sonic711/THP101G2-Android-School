<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".community.controller.PostDetailFragment">
    <data>
        <variable name="viewModel" type="com.example.thp101g2_android_school.community.viewmodel.PostDetailViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:fillViewport="true" tools:layout_editor_absoluteY="-1dp"
                android:id="@+id/nestedScrollView" tools:layout_editor_absoluteX="3dp">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                                android:id="@+id/childCardView"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:cardCornerRadius="100dp"
                                app:cardElevation="2dp"
                                android:foreground="?selectableItemBackground" app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                                android:layout_marginStart="16dp">
                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:srcCompat="@tools:sample/avatars"
                                    android:id="@+id/imageView"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/tvMemberName"
                                app:layout_constraintTop_toTopOf="@+id/childCardView"
                                app:layout_constraintStart_toEndOf="@+id/childCardView"
                                tools:text="@{viewModel.post.post.nickName}"
                                android:layout_marginStart="10dp" android:hint="TSE"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/tvMemberId"
                                app:layout_constraintTop_toBottomOf="@+id/tvMemberName"
                                app:layout_constraintStart_toEndOf="@+id/childCardView"
                                tools:text="@{viewModel.post.post.comSecClassName}"
                                android:layout_marginStart="10dp" android:hint="TSE"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/tvDate"
                                app:layout_constraintTop_toTopOf="@+id/tvMemberId"
                                app:layout_constraintStart_toEndOf="@+id/tvMemberId"
                                android:layout_marginStart="16dp"
                                tools:text="@{viewModel.post.post.comPostTime}" android:hint="11/22"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/tvTitle"
                                app:layout_constraintTop_toBottomOf="@+id/childCardView"
                                app:layout_constraintStart_toStartOf="@+id/childCardView" android:layout_marginTop="6dp"
                                tools:text="@{viewModel.post.post.comPostTitle}" android:textSize="24dp"
                                android:hint="標題"
                        />
                        <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="209dp"
                                android:layout_height="55dp"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/tvMemberName"
                                android:id="@+id/labelRecyclerView"
                                tools:listitem="@layout/com_label_itemview" tools:itemCount="3"
                                app:layout_constraintEnd_toEndOf="parent"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/tvContent"
                                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                                app:layout_constraintStart_toStartOf="@+id/tvTitle"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:hint="內文 ..." app:layout_constraintHorizontal_bias="0.0"/>
                        <ImageButton
                                android:src="@android:drawable/arrow_down_float"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/imageButton"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="9dp" app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="409dp"
                        android:layout_height="594dp"
                        android:id="@+id/recyclerView"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>