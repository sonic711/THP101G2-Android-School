<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.thp101g2_android_school.point.viewmodel.PointViewInfoModel" />
    </data>




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:foreground="?selectableItemBackground"
            app:cardBackgroundColor="#7D643E"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBianPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="@{viewModel.reason.point}"
                android:layout_gravity="center_horizontal"
                android:textColor="#DA1457"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvDateOfCh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="@{viewModel.reason.reasonof}"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tvReasonCh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_gravity="center_horizontal"
                android:text="@{viewModel.reason.timeof}"
                android:textSize="12sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>