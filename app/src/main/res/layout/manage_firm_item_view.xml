<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>
        <variable
            name="viewModel"
            type="com.example.thp101g2_android_school.manage.viewmodel.ManageFirmViewModel" />
    </data>


    <!-- 設定 foreground="?selectableItemBackground" 當選項被點擊時會改變背景色 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="#DDDDDD"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

<!--            <ImageView-->
<!--                android:id="@+id/ivfirm"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                tools:srcCompat="@tools:sample/avatars"-->
<!--                app:imageResource="@{viewModel.firmo.shopProductId}"-->
<!--                />-->

            <TextView
                android:id="@+id/ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="6dp"
                android:text="@{viewModel.firmo.shopProductId}"
                android:textColor="#0000FF"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="6dp"
                android:text="@{viewModel.firmo.shopProductName}"
                android:textColor="#0000FF"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/phoness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="6dp"
                android:text="@{viewModel.firmo.shopProductClass}"
                android:textColor="#0000FF"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/phonesss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="6dp"
                android:text="@{viewModel.firmo.shopProductPrice}"
                android:textColor="#0000FF"
                android:textSize="22sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>