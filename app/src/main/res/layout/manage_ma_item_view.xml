<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <data>
        <variable
            name="viewModel"
            type="com.example.thp101g2_android_school.manage.viewmodel.ManageMaViewModel" />
    </data>

    <!-- 設定 foreground="?selectableItemBackground" 當選項被點擊時會改變背景色 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 檢舉項 -->
            <TextView
                android:id="@+id/textReportItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="檢舉項目" />

            <!-- 檢舉者ID -->
            <TextView
                android:id="@+id/textReporterId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="檢舉者ID" />

            <!-- 被檢舉ID -->
            <TextView
                android:id="@+id/textReportedId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="被檢舉ID" />

            <!-- 一个放TextView的容器 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="文本内容" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>