<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".course.controller.CouUploadCourseFragment" >

    <data>
        <variable
            name="viewModel"
            type="com.example.thp101g2_android_school.course.viewmodel.CouUploadCourseViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="課程名稱"
        android:text="@={viewModel.courseName}" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上傳照片"
        android:onClick="@{() -> viewModel.uploadPhoto()}" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="課程簡介"
        android:text="@={viewModel.courseDescription}" />
    </LinearLayout>

</layout>